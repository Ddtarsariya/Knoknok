<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="8sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_message"
                android:layout_centerInParent="true"
                android:background="@drawable/contact_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_centerInParent="true"
                android:background="@drawable/ic_message"
                android:maxLength="1"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:padding="5sp"
            android:paddingStart="65sp"
            android:id="@+id/recycler_from"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/recycler_date"
            android:maxLines="1"
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From:-"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/recycler_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9C9C9C"
            android:text="Date"/>
        <TextView
            android:paddingStart="66sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_below="@id/recycler_from"
            android:id="@+id/recycler_smstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sms message"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_gravity="bottom"
            android:background="#e0e0e0"/>

</com.google.android.material.card.MaterialCardView>